- title @exercise[:name]
- title ": " + @selection.character.pinyin
= render "tasks"

#exercise-1
  #task
    %h2
      =@selection.character.pinyin
    %ul
      - @selection.character.translation_html.html_safe.split(";").each do |char|
        %li=char
    #hanzi-canvas


  #hanzi-solution
    = @selection.character.hanzi
  .clear

#buttons
  = link_to "Richtig", exercise_path(@exercise[:id], :selection_id => @selection.id, :answer => :right), :method => :put, :class => :button
  = link_to "Falsch", exercise_path(@exercise[:id], :selection_id => @selection.id, :answer => :wrong), :method => :put, :class => :button
  = link_to "Geraten/Gerade So", exercise_path(@exercise[:id], :selection_id => @selection.id, :answer => :mamahuhu), :method => :put, :class => :button
  .clear




